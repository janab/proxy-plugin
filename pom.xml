  <dependencies>

    <dependency>
      <groupId>com.crawljax</groupId>
      <artifactId>crawljax</artifactId>
      <version>${crawljax.version}</version>
      <type>jar</type>
    </dependency>

    <dependency>
      <groupId>bsf</groupId>
      <artifactId>bsf</artifactId>
      <version>2.4.0</version>
    </dependency>

     <dependency>
      <groupId>concurrent</groupId>
      <artifactId>concurrent</artifactId>
      <version>1.3.4</version>
     </dependency>
    
     <dependency> 
      <groupId>org.owasp.webscarab</groupId>
      <artifactId>WebScarab</artifactId>
      <version>[1.0.0-20121223,)</version>
    </dependency>
    
  </dependencies>
  
  <repositories>
    <repository>
    <id>my.mvn.repo</id>
    <url>https://github.com/crawljax/mvn-repo/raw/master</url>
