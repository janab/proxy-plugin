		</license>
	</licenses>  	
  	
  	<issueManagement>
	  <system>GitHub</system>
	  <url>https://github.com/crawljax/proxy-plugin/issues</url>
	</issueManagement>
  
  <developers>
    <developer>
      <id>frank</id>
    </developer>
    <developer>
	  <id>amesbah</id>
	  <name>Ali Mesbah</name>
